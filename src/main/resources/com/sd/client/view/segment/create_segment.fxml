<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sd.client.view.controllers.CreateSegmentController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label text="Origem" />
   <ComboBox fx:id="origin_cmb" prefWidth="150.0" />
   <Label text="Destino" />
   <ComboBox fx:id="destination_cmb" prefWidth="150.0" />
   <Label text="Direção" />
   <ComboBox fx:id="direction_cmb" prefWidth="150.0" />
   <Label text="Distancia" />
   <TextField fx:id="distance_tf" />
   <Label text="Observação" />
   <TextArea fx:id="obs_ta" prefHeight="200.0" prefWidth="200.0" />
    <Button fx:id="create_btn" onAction="#create" text="Criar" />
   <Button mnemonicParsing="false" onAction="#back" text="Voltar" />
</VBox>
